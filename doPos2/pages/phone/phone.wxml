<!--pages/phone/phone.wxml-->
<view>
       <form bindsubmit='formSubmit'>
       <view class='row'>
              <view class='info'>
                     <input class='info-input1' type='text' name="phone" value='' placeholder="请输入你的手机号" />
              </view>
       </view>
       
       <view class='row'>
              <view class='info'>
                     <input class='info-input1' type='text' name="carno" value='' placeholder="请输入你的车牌号" />
              </view>
       </view>
       <view class='row'>
              <view class='info'>
                     <input class='info-input1' type='text' name="ca" value='' placeholder="请输入你的车型" />
              </view>
       </view>
       
       <button class='submit' form-type='submit' >提交</button>
       
  </form>  
</view>
<view class='success' wx:if="{{success}}">
       <view class='cheer'>
              <icon type="success" size="24" /> 恭喜您注册成功!</view>
       <button type="default" class='return' bindtap='return_home'>返回首页</button>
</view>